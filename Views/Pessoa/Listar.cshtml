@using Funtametos_do.ViewModel
@model IEnumerable<PessoaViewModel>
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Listar</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Nome</th>
            <th scope="col">Sexo</th>
            <th scope="col">CPF</th>
            <th scope="col">Cidade</th>
            <th scope="col">UF</th>
        </tr>
    </thead>
    <tbody>
        @foreach (PessoaViewModel item in Model)
        {
            <tr>
                <td>@item.Nome</td>
                <td>@item.Sexo</td>
                <td>@item.CPF</td>
                <td>@item.Cidade</td>
                <td>@item.UF</td>
            </tr>
        }

      
    </tbody>
</table>